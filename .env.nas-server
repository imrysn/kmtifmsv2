# KMTI FMS Server - NAS Production Configuration
# This file should be placed on the NAS server at: C:\KMTI_FMS_Server\.env

# Server Mode: MUST be 'embedded' for standalone server
SERVER_MODE=embedded

# Database Configuration - QNAP MySQL via phpMyAdmin
USE_MYSQL=true
DB_HOST=192.168.200.105
DB_PORT=3306
DB_NAME=kmtifms
DB_USER=kmtifms_user
DB_PASSWORD=Ph15IcadRs

# Server Configuration
NODE_ENV=production
SERVER_PORT=3001
EXPRESS_PORT=3001

# CORS - Allow all network clients (wildcard for internal network)
CORS_ORIGIN=*

# JWT Secret - GENERATE A NEW ONE!
# PowerShell command: -join ((48..57) + (65..90) + (97..122) | Get-Random -Count 64 | % {[char]$_})
JWT_SECRET=REPLACE_THIS_WITH_RANDOM_64_CHARACTER_STRING_GENERATED_FROM_POWERSHELL
JWT_EXPIRES_IN=24h

# File Upload Configuration
MAX_FILE_SIZE=52428800
# Use LOCAL NAS path, NOT network UNC path
UPLOAD_PATH=C:\KMTI_FMS_Server\uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

