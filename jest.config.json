{
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
        "server/**/*.js",
        "!server/migrations/**",
        "!server/scripts/**",
        "!server/db/initialize.js"
    ],
    "testMatch": [
        "**/tests/**/*.test.js"
    ],
    "modulePathIgnorePatterns": [
        "<rootDir>/dist/",
        "<rootDir>/dist-server/",
        "<rootDir>/build/",
        "<rootDir>/client/"
    ],
    "verbose": true,
    "testTimeout": 10000
}